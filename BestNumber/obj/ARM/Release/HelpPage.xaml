<Page
    x:Class="BestNumber.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BestNumber"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/fondoGame4.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='1' x:Name="row0"  Height="3*" MinHeight="70" />
            <RowDefinition x:ConnectionId='2' x:Name="row1" Height="12*"/>
            <RowDefinition x:ConnectionId='3' x:Name="row2" Height="16*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='4' x:Name="buttonBack" Grid.Row="0" Content="" Height="52" Width="60" VerticalAlignment="Center"  Style="{StaticResource ButtonBackStyle}"  Margin="25,18,0,10"                         >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/ip_icon_02_Back.png"/>
            </Button.Background>
        </Button>
        <TextBox HorizontalAlignment="Center" Margin="40,20" Grid.Row="1" TextWrapping="Wrap" Text="" x:Uid="About_text" VerticalAlignment="Center" MinWidth="62" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" FontFamily="Papyrus" FontSize="18" FontWeight="Bold"/>
        <TextBlock x:ConnectionId='5' x:Name="Text_titulo" Grid.Row="0"  x:Uid="About_pageTitle"  TextWrapping="Wrap" Text="" FontFamily="Papyrus" FontSize="36" Margin="120,0,0,0" VerticalAlignment="Center"/>
        <Image Grid.Row="2" Source="Assets/ejemplo.png" Margin="0,0,0,15" VerticalAlignment="Top"/>
    </Grid>
</Page>

